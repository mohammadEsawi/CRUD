@model List<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nmae</th>
            <th scope="col">Email</th>
            <th scope="col">Paswword</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
     @foreach(var item in Model){
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td><a class="btn btn-success" asp-action="Delete" asp-controller="Employees" asp-route-id="@item.Id">Delete </a></td>
                <td><a class="btn btn-success" asp-action="Edit" asp-controller="Employees" asp-route-id="@item.Id">Edit </a></td>

            </tr>
     }
  
    </tbody>
</table>

<a href="/Employees/Create" class="btn btn-danger"> Add New</a>